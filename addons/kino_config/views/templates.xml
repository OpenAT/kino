<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    <!-- CUSTOM BOOTSTRAP THEME FOR KINO -->
    <!-- HINT: http://getbootstrap.com/customize -->
    <template id="kino_theme_option" inherit_id="website.themes" name="Kino Theme Option">
        <xpath expr='//div[@id="themes-list"]' position="inside">
            <div class="col-md-4">
                <div class="well text-center">
                    <div class="image">
                        <img class="img-responsive" src="/kino_config/static/src/img/kino_theme_thumbnail.png"
                             alt="KINO"/>
                    </div>
                    <div class="options">
                        <h3>KINO</h3>
                        <p>Kindernothilfe</p>
                        <a class="btn btn-info" href="/website/theme_change?theme_id=website.theme_kino">Apply</a>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
        
    <!-- load kino theme css and js -->
    <template id="website.theme_kino" name="KINO" inherit_id="website.theme" active="False" customize_show="True">
        <xpath expr="//link[@id='bootstrap_css']" position="replace">
            <link rel='stylesheet' href='/kino_config/static/src/css/bootstrap_kino/css/bootstrap.min.css' t-ignore="true"/>
            <link rel='stylesheet' href='/kino_config/static/src/css/bootstrap_kino/css/bootstrap-theme.min.css' t-ignore="true"/>
            <link rel='stylesheet' href='/kino_config/static/src/css/kino.css' t-ignore="true"/>
        </xpath>
    </template>
        
    <template id="kino_product_grid_description" inherit_id="website_sale.products_description">
        <xpath expr="//div[@class='text-info oe_subdescription']" position="replace">
           <div class="text-info oe_subdescription" contenteditable="false">
             <div itemprop="description" t-field="product.description">
             </div>
           </div>
        </xpath>
    </template>

