    <!-- Load custom CSS and JS for the website -->
    <template id="kino_assets_frontend" inherit_id="website_forum.assets_frontend" name="kino css">
        <!-- <xpath expr='//script[@src="/website_forum/static/src/js/website_forum.js"]' position="after"> -->
        <xpath expr='//script[@src="https://www.google.com/recaptcha/api.js"]' position="after">

        <!-- <xpath expr="." position="inside">-->

            <link rel="stylesheet" href='/kino_config/static/src/css/kino.css'/>
        </xpath>
    </template>
        <template id="kino_product_grid_description" inherit_id="website_sale.products_description">
            <xpath expr="//div[@class='text-info oe_subdescription']" position="replace">
               <div class="text-info oe_subdescription" contenteditable="false">
                 <div itemprop="description" t-field="product.description">
                 </div>
               </div>
            </xpath>
        </template>

