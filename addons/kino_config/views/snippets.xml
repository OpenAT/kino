<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- STRUCTURE SNIPPET: Two Columns Left -->
        <template id="snippet_2col_left" inherit_id="website.snippets" name="Two Columns Left">
            <xpath expr="//div[@id='snippet_structure']" position="inside">
                <div>
                    <!-- Snippet Icon and Name -->
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/kino_config/static/src/img/ui/2col_left_1.png"/>
                        <span class="oe_snippet_thumbnail_title">Two Columns Left</span>
                    </div>
                    <!-- Snippet Content -->
                    <section class="oe_snippet_body snippet_2col_left">
                        <div class="container">
                            <div class="row row-eq-height">
                                <div class="col-md-8 col_kino">
                                    <p>Left Column</p>
                                </div>
                                <div class="col-md-4 col_kino">
                                    <p>Right Column</p>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>
        </template>

        <!-- STRUCTURE SNIPPET: Two Columns Right -->
        <template id="snippet_2col_right" inherit_id="website.snippets" name="Two Columns Right">
            <xpath expr="//div[@id='snippet_structure']" position="inside">
                <div>
                    <!-- Snippet Icon and Name -->
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/kino_config/static/src/img/ui/2col_right_1.png"/>
                        <span class="oe_snippet_thumbnail_title">Two Columns Left</span>
                    </div>
                    <!-- Snippet Content -->
                    <section class="oe_snippet_body snippet_2col_right">
                        <div class="container">
                            <div class="row row-eq-height">
                                <div class="col-md-4 col_kino">
                                    <p>Left Column</p>
                                </div>
                                <div class="col-md-8 col_kino">
                                    <p>Right Column</p>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>
        </template>

        <!-- STRUCTURE SNIPPET: Three Columns Even -->
        <template id="snippet_3col_even" inherit_id="website.snippets" name="Three Columns Even">
            <xpath expr="//div[@id='snippet_structure']" position="inside">
                <div>
                    <!-- Snippet Icon and Name -->
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/kino_config/static/src/img/ui/3col_even.png"/>
                        <span class="oe_snippet_thumbnail_title">Three Columns Even</span>
                    </div>
                    <!-- Snippet Content -->
                    <section class="oe_snippet_body snippet_3col_even">
                        <div class="container">
                            <div class="row row-eq-height">
                                <div class="col-md-4 col_kino">
                                    <p>Left Column</p>
                                </div>
                                <div class="col-md-4 col_kino">
                                    <p>Mid Column</p>
